<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.lx.kotlinfirst">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.FirstActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".activity.BaseFunActivity">
        </activity>
        <activity
            android:name=".activity.DrawActivity"
            android:label="@string/title_activity_draw"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity android:name=".activity.ListDemoActivity">
        </activity>
        <activity
            android:name=".activity.ItemListActivity"
            android:label="@string/title_item_list"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".activity.ItemDetailActivity"
            android:label="@string/title_item_detail"
            android:parentActivityName=".activity.ItemListActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.lx.kotlinfirst.activity.ItemListActivity"/>
        </activity>
        <activity android:name=".activity.TestClassActivity">
        </activity>
        <activity android:name=".activity.TestInterfaceActivity">
        </activity>
    </application>

</manifest>